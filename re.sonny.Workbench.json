{
  "app-id": "re.sonny.Workbench",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "workbench",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "vte",
      "buildsystem": "meson",
      "config-opts": [
        "-Ddocs=false",
        "-Dgtk3=false",
        "-Dgtk4=true",
        "-Dvapi=false",
        "-Dglade=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/vte.git",
          "commit": "f4b915aea367d407f8ac527e1aed9425b8cea9e2"
        }
      ]
    },
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": ["-Ddocs=false", "-Dvapi=false", "-Dbackends=gtk4"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/flatpak/libportal/releases/download/0.6/libportal-0.6.tar.xz",
          "sha256": "88a12c3ba71bc31acff7238c280de697d609cebc50830c3766776ec35abc6566"
        }
      ]
    },
    {
      "name": "Workbench",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/sonnyp/Workbench.git",
          "tag": "v1.1.0",
          "commit": "1bcf99469b40df9f908e2767ee54b5a1df7f8966"
        }
      ]
    }
  ]
}